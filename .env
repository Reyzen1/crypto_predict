# File: ./.env
# Environment variables for CryptoPredict MVP

# ================================
# APPLICATION SETTINGS
# ================================
ENVIRONMENT=development
DEBUG=true

# ================================
# DATABASE SETTINGS
# ================================
# PostgreSQL connection
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/cryptopredict

# ================================
# CACHE SETTINGS
# ================================
# Redis connection
REDIS_URL=redis://localhost:6379/0

# ================================
# SECURITY SETTINGS - NEWLY ADDED
# ================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
TOKEN_EXPIRE_MINUTES=30

# ================================
# RATE LIMITING - NEWLY ADDED
# ================================
RATE_LIMIT_MINUTE=60
RATE_LIMIT_HOUR=1000

# ================================
# API URLS - NEWLY ADDED
# ================================
API_URL=http://localhost:8000
WS_URL=ws://localhost:8000

# ================================
# CORS SETTINGS - NEWLY ADDED
# ================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://testserver

# ================================
# EXTERNAL API KEYS
# ================================
# CoinGecko API (Free tier available)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Binance API (Optional, for advanced features)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Alpha Vantage API (Optional, for additional market data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# ================================
# ML MODEL SETTINGS
# ================================
MODEL_PATH=./models
MODEL_UPDATE_INTERVAL=3600
DATA_COLLECTION_INTERVAL=300

# ================================
# LOGGING SETTINGS
# ================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# ================================
# POSTGRES ADMIN (PgAdmin)
# ================================
PGADMIN_DEFAULT_EMAIL=admin@cryptopredict.local
PGADMIN_DEFAULT_PASSWORD=admin123