# File: ./.env
# Environment variables for CryptoPredict MVP
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/cryptopredict
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-very-secret-key-change-this-in-production  # Change this for production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too         # Change this for production
ALGORITHM=HS256                                            # JWT algorithm
ACCESS_TOKEN_EXPIRE_MINUTES=30                             # Token expiration time

# External API Configuration
# Get these keys from respective services
COINGECKO_API_KEY=your-coingecko-api-key                  # CoinGecko API key
BINANCE_API_KEY=your-binance-api-key                      # Binance API key
BINANCE_API_SECRET=your-binance-api-secret                # Binance API secret
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key          # Alpha Vantage API key

# Development Settings
DEBUG=True                                                 # Enable debug mode
ENVIRONMENT=development                                    # Environment type

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000                  # Backend API URL
NEXT_PUBLIC_WS_URL=ws://localhost:8000                     # WebSocket URL