# Local Development Environment (without Docker)
ENVIRONMENT=development
DEBUG=true

# Database Settings (Local PostgreSQL)
DATABASE_URL=postgresql://postgres:admin123@localhost:5433/cryptopredict

# Cache Settings (Local Redis)
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECRET_KEY=dev-secret-key-change-in-production-12345678
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production-87654321
TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_MINUTE=60
RATE_LIMIT_HOUR=1000

# API URLs (Local)
API_URL=http://localhost:8000
WS_URL=ws://localhost:8000

# CORS Settings (Local)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://testserver

# External API Keys (preserved from original)
COINGECKO_API_KEY=your_coingecko_api_key_here
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# ML Model Settings
MODEL_PATH=./models
MODEL_UPDATE_INTERVAL=3600
DATA_COLLECTION_INTERVAL=300

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log
